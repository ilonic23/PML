<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PmlUi.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="PmlUi.Views.BranchMessageBox"
        Title="BranchMessageBox"
        x:DataType="vm:MessageBoxViewModel" Opacity="1"
        Width="400" Height="200">
    <Design.DataContext>
        <vm:MessageBoxViewModel/>
    </Design.DataContext>
    
    <Window.DataContext>
        <vm:MessageBoxViewModel/>
    </Window.DataContext>
    
    <Grid x:Name="MainGrid" Background="{Binding Palette.Background}" RowDefinitions="*,*,40">
        <TextBlock x:Name="Message" FontSize="16" Foreground="{Binding Palette.PrimaryTextColor}" Text="Hello!"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Padding="10" Grid.ColumnSpan="3"/>
        <ComboBox x:Name="BranchBox" Grid.Row="1" Margin="20,20,20,20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button Grid.Row="2" Classes="standard" Margin="20,5,20,5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Content="{Binding GlobalText.Ok}"
                HorizontalContentAlignment="Center" Click="OkButtonPress"/>
    </Grid>
    
    <Window.Styles>
        <Style Selector="Button.standard">
            <Setter Property="Background" Value="{Binding Palette.ButtonEnabled}"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </Window.Styles>
</Window>
